<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragemnt_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/maincolor">
    </android.support.v7.widget.Toolbar>

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:id="@+id/root_scroll"-->
    <!--android:layout_weight="1"-->
    <!--android:fillViewport="true">-->

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="vertical">-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d7d7d7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px150"
        android:background="#f9f8f5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mike"
            android:layout_width="@dimen/px120"
            android:layout_height="@dimen/px120"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20"
            android:src="@mipmap/ic_cheat_voice"/>

        <TextView
            android:id="@+id/input_tv"
            android:layout_width="0dp"
            android:layout_height="@dimen/px120"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px30"
            android:layout_weight="1"
            android:text="点击说话"
            android:gravity="center"
            android:background="@drawable/text_normal"
            android:paddingLeft="@dimen/px30"
            android:visibility="gone"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/input_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/px120"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px30"
            android:layout_weight="1"
            android:background="@drawable/edit_normal"
            android:hint="请输入内容……"
            android:paddingLeft="@dimen/px30"
            android:textCursorDrawable="@null"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/send"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/px180"
            android:layout_height="@dimen/px120"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px20"
            android:background="@drawable/sendbtn_unenable"
            android:text="发送"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <!--</LinearLayout>-->
    <!--</ScrollView>-->


</LinearLayout>
